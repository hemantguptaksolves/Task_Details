<p id="notice"><%= notice %></p>



<div class="container">
<div class="row ">
<% @posts.each do |post| %>

<div class="col col-md-6  ">

<h2><strong><%= link_to post.title, post %></strong></h2>
<div class="container">
<p><i><%= post.description %></i></p> 






</div>
<% if user_signed_in? %>

<% if can? :edit, post %>
<button class="btn btn-warning"><%= link_to 'Edit', edit_post_path(post) %></button>
<% end %>

<% if can? :delete, post %>
<button class="btn btn-danger"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %> </button>
<% end %>

<% end %>
</div>

<% end %>
</div>
</div>
